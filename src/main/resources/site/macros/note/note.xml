<macro>
  <display-name>Note panel macro</display-name>
  <description>Note notification panel</description>
  <form>
    <input name="body" type="TextArea">
      <label>Text</label>
      <occurrences minimum="0" maximum="1"/>
      <default>Panel text goes here...</default>
    </input>
    <input name="styling" type="Checkbox">
      <label>Default styling</label>
      <occurrences minimum="0" maximum="1"/>
      <default>checked</default>
    </input>
  </form>
</macro>